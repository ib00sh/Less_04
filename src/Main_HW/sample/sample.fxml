<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Main_HW.sample.Controller">
    <stylesheets><URL value="@/Main_HW/css/Styles.css" /> </stylesheets>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox>
        <TextField fx:id="textField" onAction="#sendMsg" opacity="0.79" promptText="Напишите сообщение" HBox.hgrow="ALWAYS">
         <font>
            <Font name="Akrobat-Regular" size="13.0" />
         </font></TextField>
        <Button fx:id="btn1" contentDisplay="CENTER" onAction="#sendMsg" text="Send Msg" textAlignment="CENTER" textOverrun="CLIP" />
    </HBox>
</VBox>
